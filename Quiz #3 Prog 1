#include <iostream>
#include <cmath>
using namespace std;

double distance (double x1, double y1, double x2, double y2) {
double daniel=pow((x2-x1),2);
double amaro=pow((y2-y1),2);
double raiz=sqrt(daniel + amaro);
return raiz;
}

int main(){
  double x1, y1, x2, y2;
  cout<<"Este programa te permite obtener la distacia entre 2 puntos"<<endl;
  cout<<"Ingresa el valor de x1: ";
  cin>>x1;
  cout<<"Ingresa el valor de y1: ";
  cin>>y1;
  cout<<"Ingresa el valor de x2: ";
  cin>>x2;
  cout<<"Ingresa el valor de y2: ";
  cin>>y2;
  cout<<"La distancia entre los 2 puntos es: "<<distance(x1, y1, x2, y2);
  return 0.0;
}
