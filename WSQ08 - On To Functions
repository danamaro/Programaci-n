#include <iostream>
using namespace std;

int sumar (int a, int b){
	return a+b;}
int restar (int a, int b){
	return a-b;}
int multiplicar (int a, int b){
	return a*b;}
int dividir (int a, int b){
	return a/b;}


int main() {
int a, b;

cout<<"Da el primer numero a sumar: "<<endl;
cin>>a;
cout<<"Da el segundo numero a sumar: "<<endl;
cin>>b;
cout<<"El resultado es: "<<sumar(a, b)<<endl;

cout<<"Da el primer numero a restar: "<<endl;
cin>>a;
cout<<"Da el segundo numero a restar: "<<endl;
cin>>b;
cout<<"El resultado es: "<<restar(a, b)<<endl;

cout<<"Da el primer numero a multiplicar: "<<endl;
cin>>a;
cout<<"Da el segundo numero a mumltiplicar: "<<endl;
cin>>b;
cout<<"El resultado es: "<<multiplicar(a, b)<<endl;

cout<<"Da el primer numero a dividir: "<<endl;
cin>>a;
cout<<"Da el segundo numero a dividir: "<<endl;
cin>>b;
cout<<"El resultado es: "<<dividir(a, b)<<endl;
return 0;
}
