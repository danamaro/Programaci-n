#include <iostream>
#include <string>

using namespace std;

string estrellas (int a){
  string est="*", estrella=" ";
  for (int i=1;i<=a;i++){
    estrella=estrella+est;
  }
  return estrella;
}

int main() {
  int a;
  cout<<"Indique el número de estrellas que desea ver "<<endl;
  cin>>a;
  cout<<"Aquí van las estrellas = "<< estrellas(a) <<endl;
  return 0;
}
